{
    "compilerOptions": {
        "target": "es6",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./build",
        "preserveConstEnums": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "filesGlob": [
        "typings/main.d.ts",
        "src/**/*.ts",
        "src/canvas.d.ts"
    ]
}