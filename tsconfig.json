{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true
  },
  "filesGlob": [
    "typings/main.d.ts",
    "src/**/*.ts"
  ],
  "files": [
    "typings/main.d.ts",
    "src/Manager.ts",
    "src/User.ts",
    "src/UserManager.ts",
    "src/app.ts"
  ]
}